# Backend HTTP bind (local only)
BACKEND_HOST=127.0.0.1
BACKEND_PORT=18889

# API Bearer token (required)
BACKEND_API_TOKEN=replace_with_strong_random_token

# Runtime storage
BACKEND_DB_PATH=/root/openclaw-assistant-backend/data/backend_state.db
BACKEND_LOG_DIR=/root/openclaw-assistant-backend/logs/backend
BACKEND_AUDIT_PATH=/root/openclaw-assistant-backend/logs/backend/audit.jsonl

# Sidecar probe target
OPENCLAW_GATEWAY_URL=http://127.0.0.1:18789
OPENCLAW_GATEWAY_TOKEN=
BACKEND_REQUEST_TIMEOUT_SECONDS=15

# Astr model pull source (web one-click sync)
ASTRBOT_CMD_CONFIG_PATH=/root/AstrBot/data/cmd_config.json
ASTRBOT_PLUGIN_EXPORT_PATH=/root/AstrBot/data/plugin_data/astrbot_plugin_openclaw_assistant/astr_provider_export.json
ASTR_PULL_SOURCE_MODE=cmd_config_then_export
ASTR_PULL_REQUIRE_ENABLED_PROVIDER=true

# Executor settings
EXECUTOR_CODEX_BIN=codex
EXECUTOR_GEMINI_BIN=gemini
EXECUTOR_TIMEOUT_SECONDS=180
EXECUTOR_MAX_TASK_CHARS=8000
EXECUTOR_ALLOW_GLOBAL_WORKDIR=true
EXECUTOR_ALLOWED_WORKDIRS=/root/AstrBot,/root/openclaw-assistant-backend,/root/openclaw-astr-assistant,/root/astrbot_plugin_openclaw_assistant
